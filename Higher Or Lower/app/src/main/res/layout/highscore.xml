<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".HighScore"
    android:background="@drawable/background_4">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:id="@+id/leaderboard"
        android:text="Leaderboard"
        android:textSize="60sp"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:fontFamily="@font/blugide"/>

    <Button
        android:id="@+id/resetButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/leaderboard"
        android:text="Reset High Scores"
        android:textSize="30sp"
        android:fontFamily="@font/mightysouly"
        android:textColor="@color/white"
        android:backgroundTint="@color/Exit"
        android:onClick="resetHighScores"/>

    <ListView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="200dp"
        android:padding="16dp"
        android:id="@+id/leaderboardListView"
        android:fontFamily="@font/moon"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="300dp"
        android:id="@+id/emptyView"
        android:gravity="center"
        android:text="No high scores available"
        android:textColor="@color/Red"
        android:textSize="36sp"
        android:visibility="gone"
        android:fontFamily="@font/moon"/>

</RelativeLayout>
